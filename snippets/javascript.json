    "fluig-widget": {
        "prefix": "fluig-widget",
        "body": [
            "var ${1:MinhaWidget} = SuperWidget.extend((function () {",
            "",
            "    /**",
            "     * Elementos públicos da Widget",
            "     *",
            "     * Tudo que é declarado aqui é acessível pela variável da Widget",
            "     */",
            "    const widget = {",
            "",
            "        /**",
            "         * Eventos da Widget",
            "         */",
            "        bindings: {",
            "            local: {",
            "                \"save-settings\": [\"click_saveSettings\"]",
            "            },",
            "            global: {}",
            "        },",
            "",
            "        /**",
            "         * Método disparado automaticamente quando a Widget é iniciada",
            "         */",
            "        init() {",
            "            if (this.isEditMode) {",
            "                // Modo de Configuração",
            "",
            "                return;",
            "            }",
            "",
            "            this.initWidgetElements();",
            "",
            "            widgetElements.loading.show();",
            "",
            "            // Resto da programação de inicialização da widget",
            "            $0",
            "",
            "            widgetElements.loading.hide();",
            "        },",
            "",
            "        /**",
            "         * Cria um \"cache\" dos elementos HTML da Widget",
            "         *",
            "         * O cache ajuda a não gastar processamento pesquisando itens no DOM",
            "         */",
            "        initWidgetElements() {",
            "            widgetElements.widget = this.DOM;",
            "            widgetElements.loading = FLUIGC.loading(window, {",
            "                textMessage: \"Processando Dados. Favor aguardar.\"",
            "            });",
            "        },",
            "",
            "        /**",
            "         * Salva as configurações da Widget na tela de edição",
            "         */",
            "        saveSettings() {",
            "            WCMSpaceAPI.PageService.UPDATEPREFERENCES(",
            "                {",
            "                    async: true,",
            "                    success: function(data) {",
            "                        FLUIGC.toast({",
            "                            message: data.message,",
            "                            type: \"success\"",
            "                        });",
            "                    },",
            "                    fail: function(xhr, message, errorData) {",
            "                        console.log(xhr, message, errorData);",
            "                        FLUIGC.toast({",
            "                            message: errorData.message,",
            "                            type: \"danger\"",
            "                        });",
            "                    }",
            "                },",
            "                this.instanceId,",
            "                {",
            "                    // Dados a enviar",
            "                }",
            "            );",
            "        },",
            "    };",
            "",
            "    /*",
            "     * Itens privados da Widget",
            "     * Nada a partir daqui é acessível pela variável da Widget",
            "     */",
            "",
            "    /**",
            "     * Elementos que compõem a Widget (cache de para performance)",
            "     */",
            "    const widgetElements = {",
            "",
            "        /**",
            "         * DIV da Widget",
            "         *",
            "         * @type {JQuery}",
            "         */",
            "        widget: null,",
            "",
            "        /**",
            "         * Tela de carregamento",
            "         *",
            "         * @type {Loading}",
            "         */",
            "        loading: null,",
            "    };",
            "",
            "    // Continuar a programação",
            "",
            "    return widget;",
            "})());"
        ],
        "description": "Cria o esqueleto de uma Widget usando Revealing Module Pattern (front-end)"
    },

    "fluig-soap-card-create": {
        "scope": "javascript",
        "prefix": "fluig-soap-card-create",
        "body": [
            "var helper = ServiceManager.getService(\"${1:ECMCardService}\").getBean();",
            "",
            "/**",
            " * @type {com.totvs.technology.ecm.dm.ws.CardDtoArray}",
            " */",
            "var cardDtoArray = helper.instantiate(\"com.totvs.technology.ecm.dm.ws.CardDtoArray\");",
            "",
            "/**",
            " * @type {com.totvs.technology.ecm.dm.ws.CardDto}",
            " */",
            "var cardDto = helper.instantiate(\"com.totvs.technology.ecm.dm.ws.CardDto\");",
            "cardDto.setDocumentDescription(\"${2:documentName}\");",
            "cardDto.setParentDocumentId(${3:folderId});",
            "cardDto.setUserNotify(false);",
            "cardDto.setInheritSecurity(true);",
            "",
            "var cardFieldDtoList = cardDto.getCardData();",
            "",
            "/**",
            " * @type {com.totvs.technology.ecm.dm.ws.CardFieldDto}",
            " */",
            "var cardFieldDto = helper.instantiate(\"com.totvs.technology.ecm.dm.ws.CardFieldDto\");",
            "cardFieldDto.setField(\"${4:fieldName}\");",
            "cardFieldDto.setValue(\"${5:fieldValue}\");",
            "cardFieldDtoList.add(cardFieldDto);",
            "",
            "cardDtoArray.getItem().add(cardDto);",
            "",
            "/**",
            " * @type {com.totvs.technology.ecm.dm.ws.CardService}",
            " */",
            "var cardService = helper.instantiate(\"com.totvs.technology.ecm.dm.ws.ECMCardServiceService\").getCardServicePort();",
            "",
            "var result = cardService.create(",
            "    getValue(\"WKCompany\"),",
            "    \"${6:username}\",",
            "    \"${7:password}\",",
            "    cardDtoArray",
            ").getItem().get(0);",
            "",
            "if (!result.getWebServiceMessage().equals(\"ok\")) {",
            "    throw \"Falha ao adicionar item. \" + result.getWebServiceMessage();",
            "}",
            "",
            "// ID do registro criado: result.getDocumentId()",
            ""
        ],
        "description": "Adiciona um registro de formulário via SOAP ECMCardService (back-end)."
    },

